{
  "mcpServers": {
    "abathur-memory": {
      "command": "./target/release/abathur-mcp-memory",
      "args": [
        "--db-path",
        ".abathur/abathur.db"
      ],
      "env": {
        "RUST_LOG": "info"
      },
      "description": "Abathur memory management server - provides access to long-term memory operations",
      "tools": [
        "memory_add",
        "memory_get",
        "memory_search",
        "memory_update",
        "memory_delete"
      ]
    },
    "abathur-task-queue": {
      "command": "./target/release/abathur-mcp-tasks",
      "args": [
        "--db-path",
        ".abathur/abathur.db"
      ],
      "env": {
        "RUST_LOG": "info"
      },
      "description": "Abathur task queue management server - provides access to task enqueueing, monitoring, and dependency management",
      "tools": [
        "task_enqueue",
        "task_list",
        "task_get",
        "task_queue_status",
        "task_cancel",
        "task_execution_plan"
      ]
    }
  }
}
